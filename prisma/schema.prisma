generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  name          String
  email         String       @unique
  password_hash String       @map("password_hash")
  role          UserRole     @default(OWNER)
  asaasCustomerId String?    @map("asaas_customer_id")
  cpf           String?
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  restaurants   Restaurant[]

  @@map("users")
}

model Restaurant {
  id                     String        @id @default(uuid())
  name                   String
  slug                   String        @unique
  description            String?
  logoUrl                String?       @map("logo_url")
  bannerUrl              String?       @map("banner_url")
  addressText            String        @map("address_text")
  latitude               Decimal?      @db.Decimal(10, 8)
  longitude              Decimal?      @db.Decimal(11, 8)
  maxDeliveryDistanceKm  Int           @default(10) @map("max_delivery_distance_km")
  phoneNumber            String        @map("phone_number")
  cpfCnpj                String?       @map("cpf_cnpj")
  subscriptionStatus     String        @default("INACTIVE") @map("subscription_status")
  pixKey                 String        @map("pix_key")
  mercadoPagoAccessToken String?       @map("mp_access_token")
  isOpen                 Boolean       @default(false) @map("is_open")
  deliveryFee            Decimal       @default(0.00) @db.Decimal(10, 2) @map("delivery_fee")
  freeDeliveryAbove      Decimal?      @db.Decimal(10, 2) @map("free_delivery_above")
  deliveryTimeMin        Int           @default(30) @map("delivery_time_min")
  deliveryTimeMax        Int           @default(45) @map("delivery_time_max")
  createdAt              DateTime      @default(now()) @map("created_at")
  updatedAt              DateTime      @updatedAt @map("updated_at")
  userId                 String        @map("user_id")
  user                   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories             Category[]
  orders                 Order[]
  openingHours           OpeningHour[]
  reviews                Review[]
  coupons        Coupon[]
  @@map("restaurants")
}

model OpeningHour {
  id           String     @id @default(uuid())
  dayOfWeek    Int
  openTime     String
  closeTime    String
  restaurantId String     @map("restaurant_id")
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@map("opening_hours")
}

model Category {
  id           String     @id @default(uuid())
  name         String
  orderIndex   Int        @default(0)
  restaurantId String     @map("restaurant_id")
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  products     Product[]

  @@map("categories")
}

model Product {
  id           String        @id @default(uuid())
  name         String
  description  String?
  basePrice    Decimal       @map("base_price") @db.Decimal(10, 2)
  imageUrl     String?       @map("image_url")
  available    Boolean       @default(true)
  deletedAt    DateTime?     @map("deleted_at")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  categoryId   String        @map("category_id")
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  optionGroups OptionGroup[]
  orderItems   OrderItem[]

  @@map("products")
}

model OptionGroup {
  id           String          @id @default(uuid())
  name         String
  type         OptionGroupType @default(MULTIPLE)
  minSelection Int             @default(0)
  maxSelection Int             @default(1)
  productId    String          @map("product_id")
  product      Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  options      Option[]

  @@map("option_groups")
}

model Option {
  id         String      @id @default(uuid())
  name       String
  priceDelta Decimal     @default(0.00) @db.Decimal(10, 2) @map("price_delta")
  groupId    String      @map("group_id")
  group      OptionGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@map("options")
}

model Order {
  id                String        @id @default(uuid())
  customerName      String        @map("customer_name")
  customerPhone     String        @map("customer_phone")
  customerAddress   String        @map("customer_address")
  customerLatitude  Decimal?      @map("customer_latitude") @db.Decimal(10, 8)
  customerLongitude Decimal?      @map("customer_longitude") @db.Decimal(11, 8)
  paymentMethod     String        @map("payment_method")
  trocoPara         Decimal?      @map("troco_para") @db.Decimal(10, 2)
  subTotalPrice     Decimal       @map("sub_total_price") @db.Decimal(10, 2)
  deliveryFee       Decimal       @map("delivery_fee") @db.Decimal(10, 2)
  totalPrice        Decimal       @map("total_price") @db.Decimal(10, 2)
  status            OrderStatus   @default(PENDING)
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  restaurantId      String        @map("restaurant_id")
  restaurant        Restaurant    @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  paymentStatus     PaymentStatus @default(PENDING) @map("payment_status")
  mercadoPagoId     String?       @map("mp_id")
  paymentLink       String?       @map("payment_link")
  couponId          String?       @map("coupon_id")
  discountPrice     Decimal       @default(0.00) @map("discount_price") @db.Decimal(10, 2)
  orderItems        OrderItem[]

  @@index([restaurantId, status]) 
  @@index([createdAt])          
  @@map("orders")
}

model OrderItem {
  id                 String  @id @default(uuid())
  quantity           Int     @default(1)
  unitPrice          Decimal @map("unit_price") @db.Decimal(10, 2)
  optionsDescription String? @map("options_description")
  orderId            String  @map("order_id")
  order              Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId          String  @map("product_id")
  product            Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@map("order_items")
}

model Review {
  id           String     @id @default(uuid())
  customerName String     @map("customer_name")
  stars        Int
  comment      String?
  createdAt    DateTime   @default(now()) @map("created_at")
  restaurantId String     @map("restaurant_id")
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model Coupon {
  id            String     @id @default(uuid())
  code          String
  description   String?
  discountValue Decimal    @map("discount_value") @db.Decimal(10, 2)
  discountType  DiscountType @default(PERCENTAGE) @map("discount_type")
  minOrderValue Decimal?   @map("min_order_value") @db.Decimal(10, 2)
  maxDiscount   Decimal?   @map("max_discount") @db.Decimal(10, 2)
  active        Boolean    @default(true)
  expiresAt     DateTime?  @map("expires_at")
  usageLimit    Int?       @map("usage_limit") 
  usedCount     Int        @default(0) @map("used_count")
  
  restaurantId  String     @map("restaurant_id")
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  @@unique([restaurantId, code]) 
  @@map("coupons")
}

enum OptionGroupType {
  SINGLE
  MULTIPLE
}

enum OrderStatus {
  PENDING
  PREPARING
  READY
  OUT
  COMPLETED
  REJECTED
  CANCELED
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
  REFUNDED
}

enum UserRole {
  OWNER   
  SUPER_ADMIN  
}

enum DiscountType {
  PERCENTAGE
  FIXED
}
model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("password_reset_tokens")
}